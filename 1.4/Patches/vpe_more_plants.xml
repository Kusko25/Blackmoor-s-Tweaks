<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Plants Expanded - More Plants</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationRemove">
                    <xpath>Defs/ThingDef[defName="VCE_Oats"]/modExtensions</xpath>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VCE_Oats"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>VCE_RawOats</harvestedThingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VCE_Oats"]/plant/harvestYield</xpath>
                    <value>
                        <harvestYield>30</harvestYield>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VCE_Oats"]/description</xpath>
                    <value>
                        <description>The oat, sometimes called the common oat, is a species of cereal grain grown for its seed, which is known by the same name. Oats have numerous uses in gastronomy, and they can also be turned into vegetable milk.</description>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>